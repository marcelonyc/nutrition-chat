# Application settings
APP_NAME=Nutrition Chat

# LLM Configuration
OLLAMA_MODEL=llama3.2:1b
OLLAMA_API_BASE=http://localhost:11434
OLLAMA_API_TOKEN=
SYSTEM_PROMPT=You are a helpful and knowledgeable nutrition assistant. Provide accurate, evidence-based advice about diet, nutrition, and healthy eating habits.
MEMORY_TOKEN_LIMIT=3200

# Database Configuration
DATABASE_URL=sqlite:///./data/chat.db

# Security Settings (IMPORTANT: Change these in production!)
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Admin User (Optional - creates default admin account on startup)
ADMIN_EMAIL=admin@example.com
ADMIN_USER=admin
ADMIN_PASSWORD=changeme123
